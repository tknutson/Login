@model Login.Models.User

@using (Html.BeginForm("AddUser", "Admin", FormMethod.Post))
    {
  <div class="container">
    <h1>Register</h1>
    <p>Please fill in this form to create an account.</p>
    <hr>

    <!-- TODO Add validation for all fields -->
    <label for="email"><b>Email</b></label>
    @Html.TextBoxFor(m => m.UserName, new { name="email", placeholder="Enter Email", required = "required", type="email" })

    <label for="phone"><b>Phone Number</b></label>
     @Html.TextBoxFor(m => m.Phone, new { name="phone", placeholder="Enter Phone Number", type="tel" })

    <label for="psw"><b>Password</b></label>
    @Html.TextBoxFor(m => m.Password, new { name="psw", placeholder="Enter Password", required = "required", type="password" })

    <label for="psw-repeat"><b>Repeat Password</b></label>
    @Html.TextBoxFor(m => m.Password, new { name="psw", placeholder="Repeat Password", required = "required", type="password" })
    <hr>

    <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>
    <button type="submit" class="registerbtn">Register</button>
  </div>
}